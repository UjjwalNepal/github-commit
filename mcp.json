{
  "name": "github-commit-mcp",
  "version": "1.0.0",
  "description": "GitHub Commit MCP Server for Cursor",
  "capabilities": {
    "resources": {
      "github-commits": {
        "description": "Read commits from a GitHub repository",
        "uri": "github://{owner}/{repo}/commits"
      }
    },
    "tools": {
      "generate-commit-message": {
        "description": "Generate a commit message based on code changes",
        "parameters": {
          "changes": {
            "type": "string",
            "description": "Description of the code changes"
          },
          "context": {
            "type": "string",
            "description": "Additional context for the commit",
            "optional": true
          }
        }
      }
    },
    "prompts": {
      "commit-message": {
        "description": "Generate a commit message template"
      }
    }
  },
  "entrypoint": "dist/index.js",
  "type": "module",
  "transport": {
    "type": "stdio"
  }
} 